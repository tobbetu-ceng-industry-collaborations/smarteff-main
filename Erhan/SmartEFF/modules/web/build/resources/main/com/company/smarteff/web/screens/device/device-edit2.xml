<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.smarteff.web.screens.device">
    <data>
        <instance id="deviceDc"
                  class="com.company.smarteff.entity.Device"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="deviceDc">
            <column width="250px">
                <textField id="device_idField" property="device_id"/>
                <textField id="device_nameField" property="device_name"/>
                <textField id="is_onField" property="is_on"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
